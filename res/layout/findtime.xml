		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:padding="3px">
<TextView android:text="sampletext" 	android:textColor="#bd931d" android:id="@+id/showTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dip" android:layout_gravity="left" android:typeface="sans" android:padding="4dip" android:layout_marginLeft="30dip"></TextView>

			</LinearLayout>
